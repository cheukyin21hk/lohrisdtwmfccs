<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
     android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
     android:paddingRight="@dimen/activity_horizontal_margin"
     android:paddingTop="@dimen/activity_vertical_margin"
     android:paddingBottom="@dimen/activity_vertical_margin"
     tools:context="rms.fyp.rmsphone.ConfirmTicket">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <GridLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
                              android:columnCount="3"
                              android:rowCount="1">

                                   <Button
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="Home"
                                       android:id="@+id/homeBtn"
                                       android:layout_row="0"
                                       android:layout_column="0" />
                                   <Button
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="My Ticket"
                                       android:id="@+id/ticketBtn3"
                                       android:layout_row="0"
                                       android:layout_column="2" />
                               </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="2"
            android:columnCount="3">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Restaurant Name : "
                android:id="@+id/restaurantNameLabel2"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/restaurantNameField2"
                android:layout_row="0"
                android:layout_column="1" />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="2"
            android:columnCount="3">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Party Size : "
                android:id="@+id/partySizeLabel"
                android:layout_row="0"
                android:layout_column="0" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/partySizeSpinner"
                android:layout_row="0"
                android:layout_column="1" />
        </GridLayout>
        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:textAppearance="?android:attr/textAppearanceMedium"
                             android:text="Queue Position: "
                             android:id="@+id/ticketAheadField"
                              />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Waiting Time : "
            android:id="@+id/waitingTimeField" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Confirm Ticket"
            android:id="@+id/getTicketBtn"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</RelativeLayout>
